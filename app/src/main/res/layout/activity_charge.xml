<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sayanpco.sayanchargesample.activities.ChargeActivity">

    <Spinner
        android:id="@+id/spOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:id="@+id/spPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spOperator"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:id="@+id/spType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spPrice"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خرید"
        android:layout_below="@+id/etPhone"
        android:layout_alignLeft="@+id/btnPurchaseCredit"
        android:layout_alignStart="@+id/btnPurchaseCredit"/>

    <Button
        android:id="@+id/btnPurchaseOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPurchase"
        android:layout_centerHorizontal="true"
        android:text="خرید آنلاین"/>

    <Button
        android:id="@+id/btnPurchaseCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPurchaseOnline"
        android:layout_centerHorizontal="true"
        android:text="خرید اعتباری"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etPhone"
        android:layout_below="@+id/spType"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
